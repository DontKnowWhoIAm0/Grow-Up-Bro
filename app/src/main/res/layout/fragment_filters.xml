<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFCF7">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="#FFFCF7"
        android:padding="0dp"
        app:icon="@drawable/arrow_back"
        app:iconTint="@color/black"
        app:iconSize="26dp"
        android:stateListAnimator="@null" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Фильтры"
        android:textColor="@color/black"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/careDifficult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Сложность в уходе"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/beginnerLevel"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/white"
        android:text="Разберется даже новичок"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:cornerRadius="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/careDifficult"
        app:strokeColor="#24873B"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mediumLevel"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:backgroundTint="@color/white"
        android:text="Для бывалого"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toEndOf="@id/beginnerLevel"
        app:layout_constraintTop_toBottomOf="@id/careDifficult"
        app:strokeColor="#24873B"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/highLevel"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:backgroundTint="@color/white"
        android:text="без профессионала не лезть"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.083"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/beginnerLevel"
        app:strokeColor="#24873B"
        app:strokeWidth="1dp" />

    <TextView
        android:id="@+id/sunlightNeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="Освещение"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/highLevel" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sunloving"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/white"
        android:text="Светолюбивое"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:cornerRadius="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sunlightNeed"
        app:strokeColor="#24873B"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/partial"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="4dp"
        android:backgroundTint="@color/white"
        android:text="Рассеянный свет"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:cornerRadius="30dp"
        app:layout_constraintStart_toEndOf="@+id/sunloving"
        app:layout_constraintTop_toBottomOf="@+id/sunlightNeed"
        app:strokeColor="#24873B"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/shade"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="4dp"
        android:backgroundTint="@color/white"
        android:text="Тенелюбивое"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:cornerRadius="30dp"
        app:layout_constraintStart_toEndOf="@+id/partial"
        app:layout_constraintTop_toBottomOf="@+id/sunlightNeed"
        app:strokeColor="#24873B"
        app:strokeWidth="1dp" />

    <TextView
        android:id="@+id/waterNeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="Полив"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sunloving" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/minimal"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/white"
        android:text="Минимальный"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:cornerRadius="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/waterNeed"
        app:strokeColor="#24873B"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/medium"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="4dp"
        android:backgroundTint="@color/white"
        android:text="Умеренный"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:cornerRadius="30dp"
        app:layout_constraintStart_toEndOf="@+id/minimal"
        app:layout_constraintTop_toBottomOf="@+id/waterNeed"
        app:strokeColor="#24873B"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/abundant"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="4dp"
        android:backgroundTint="@color/white"
        android:text="Обильный"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:cornerRadius="30dp"
        app:layout_constraintStart_toEndOf="@+id/medium"
        app:layout_constraintTop_toBottomOf="@+id/waterNeed"
        app:strokeColor="#24873B"
        app:strokeWidth="1dp" />

    <TextView
        android:id="@+id/temperatureNeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="Температура"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/minimal" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cold"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/white"
        android:text="Холодостойкое"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:cornerRadius="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temperatureNeed"
        app:strokeColor="#24873B"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/warm"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="4dp"
        android:backgroundTint="@color/white"
        android:text="Теплолюбивое"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:cornerRadius="30dp"
        app:layout_constraintStart_toEndOf="@+id/cold"
        app:layout_constraintTop_toBottomOf="@+id/temperatureNeed"
        app:strokeColor="#24873B"
        app:strokeWidth="1dp" />

    <TextView
        android:id="@+id/size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="Размер"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cold" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/small"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/white"
        android:text="Маленький"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:cornerRadius="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/size"
        app:strokeColor="#24873B"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/average"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="4dp"
        android:backgroundTint="@color/white"
        android:text="Средний"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:cornerRadius="30dp"
        app:layout_constraintStart_toEndOf="@+id/small"
        app:layout_constraintTop_toBottomOf="@+id/size"
        app:strokeColor="#24873B"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/big"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="4dp"
        android:backgroundTint="#FFFFFFFF"
        android:text="Большой"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:cornerRadius="30dp"
        app:layout_constraintStart_toEndOf="@+id/average"
        app:layout_constraintTop_toBottomOf="@+id/size"
        app:strokeColor="#24873B"
        app:strokeWidth="1dp" />

    <TextView
        android:id="@+id/safety"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="Безопасность для детей и животных"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/small" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/safe"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/white"
        android:text="Безопасное"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:cornerRadius="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/safety"
        app:strokeColor="#24873B"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/toxic"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="4dp"
        android:backgroundTint="@color/white"
        android:text="Ядовитое"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:cornerRadius="30dp"
        app:layout_constraintStart_toEndOf="@+id/safe"
        app:layout_constraintTop_toBottomOf="@+id/safety"
        app:strokeColor="#24873B"
        app:strokeWidth="1dp" />

    <TextView
        android:id="@+id/otherFeatures"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="Другие категории"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/safe" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/flowering"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/white"
        android:text="Цветущее"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:cornerRadius="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otherFeatures"
        app:strokeColor="#24873B"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/smelling"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="4dp"
        android:backgroundTint="@color/white"
        android:text="Пахнущее"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:cornerRadius="30dp"
        app:layout_constraintStart_toEndOf="@+id/flowering"
        app:layout_constraintTop_toBottomOf="@+id/otherFeatures"
        app:strokeColor="#24873B"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/allergen"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="4dp"
        android:backgroundTint="@color/white"
        android:text="Аллерген"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:cornerRadius="30dp"
        app:layout_constraintStart_toEndOf="@+id/smelling"
        app:layout_constraintTop_toBottomOf="@+id/otherFeatures"
        app:strokeColor="#24873B"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/edible"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/white"
        android:text="Съедобное"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:cornerRadius="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flowering"
        app:strokeColor="#24873B"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/medical"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="4dp"
        android:backgroundTint="@color/white"
        android:text="Лекарственное"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:cornerRadius="30dp"
        app:layout_constraintStart_toEndOf="@+id/edible"
        app:layout_constraintTop_toBottomOf="@+id/flowering"
        app:strokeColor="#24873B"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/aircleaning"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="4dp"
        android:backgroundTint="@color/white"
        android:ellipsize="end"
        android:text="Очищает воздух"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:cornerRadius="30dp"
        app:layout_constraintStart_toEndOf="@+id/medical"
        app:layout_constraintTop_toBottomOf="@+id/flowering"
        app:strokeColor="#24873B"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/applyButton"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:backgroundTint="#24873B"
        android:text="Применить"
        app:cornerRadius="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
